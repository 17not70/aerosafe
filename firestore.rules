
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for Admin role in the user's custom claims
      return request.auth.token.role == 'Admin';
    }
    
    function isSafetyOfficer() {
      // Check for Safety Officer role in the user's custom claims
      return request.auth.token.role == 'Safety Officer';
    }

    // A user can read their own user document
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update, delete: if isAdmin();
    }
    
    match /reports/{reportId} {
      // Admins and Safety Officers can manage any report
      allow read, list, update, delete: if isSafetyOfficer() || isAdmin();
      // Any authenticated user can create a report
      allow create: if isSignedIn();
      // Additionally, a user can read a report if they are the reporter
      allow read: if resource.data.reporter_id == request.auth.uid;
    }
    
    match /corrective_actions/{correctiveActionId} {
        allow read, list, create, update, delete: if isSafetyOfficer() || isAdmin();
    }

    match /audit_logs/{auditLogId} {
      allow read, write: if isAdmin();
    }
  }
}
